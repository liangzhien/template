// main: style.styl

.viewport {
    vendor("transform-origin",center top);
}
.screen {
    position: absolute;
    top: 0 !important;
    left: 0 !important;
    bottom: 0 !important;
    right: 0 !important;
}
.full {
    position absolute
    top 0
    left 0
    width 100%
    height 100%
}
.pages {
    @extend .screen;
}
.page {
    @extend .screen;
    opacity 0;
    vendor("transition",all 0.5s);
    &[data-ease="slide"] {
        opacity 1;
        vendor("transform",translateX(640px));
    }
    &.show {
        opacity 1;
    }
    &[data-ease="slide"].show {
        vendor("transform",translateX(0px));
    }
}
.wrap {
    @extend .screen;
    overflow hidden;
}
.hide {
    display: none;
}
.scroller {
    vendor("overflow-scrolling",touch);
}
