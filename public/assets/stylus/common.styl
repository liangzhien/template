// main: style.styl

.viewport {
    position absolute
    top 0
    left 0
    width 100%;
    vendor("transform-origin",center top);
}
.screen {
    position: absolute;
    top: 0 !important;
    left: 0 !important;
    bottom: 0 !important;
    right: 0 !important;
}
.full {
    position absolute
    top 0
    left 0
    width 100%
    height 100%
}
.design {
    position absolute
    top 0
    left 0
    width 640px
    height 1040px
}
.fullsize {
    position absolute
    top 0
    left -80px
    width 800px
    height 1040px
}
.wrap {
    @extend .full;
    position relative
    overflow hidden;
    .pages {
        @extend .full;
    }
    .page {
        @extend .full;
        opacity 0;
        vendor("transition",all 0.5s);
        &[data-ease="slide"] {
            opacity 1;
            vendor("transform",translateX(640px));
        }
        &.show {
            opacity 1;
        }
        &[data-ease="slide"].show {
            vendor("transform",translateX(0px));
        }
    }
}
.hide {
    display: none;
}
.scroller {
    overflow: auto;
    vendor("overflow-scrolling",touch);
}
button,input,select,textarea {
    border: 0 none;
    background: none;
    vendor("appearance",none);
}
