// main: style.styl

.modals {
    @extend .screen;
    opacity: 0;
    z-index 100;
    vendor("transition",opacity 0.5s);
    background-color: rgba(0, 0, 0, 0.85);
    &.show {
        opacity: 1;
    }
    .modal {
        opacity: 0;
        vendor("transform",translate(0px,100px));
        vendor("transition",all 0.5s);
        &.show {
            vendor("transform",translate(0px, 0px));
            opacity: 1;
        }
        .modal_close_default {
            position absolute
            top (20/10)em
            right (20/10)em
            font-size: (80/10)em;
            color #fff;
        }
    }
}

.msg_box {
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    line-height: 1.3;
    margin: -50px 0 0 0;
    font-size: 1.5em;
    text-align: center;
    z-index: 100;
    vendor("transform", scale(0));
    transition: -webkit-transform 0.5s;
    -webkit-transition: -webkit-transform 0.5s;
    &.show {
        vendor("transform", scale(1));
    }
    .msg {
        display: inline-block;
        padding: (10/10)em;
        min-width: 100px;
        border-radius: (10/10)em;
        background: rgba(0, 0, 0, 0.7);
        color: #fff;
    }
}

// 默认loading模块
.loading {
    @extend .full;
    background bgcolor
    .loading_data {
        position: absolute;
        top: 50%;
        left: 50%;
        width: (200/10)em;
        height: (200/10)em;
        margin-left: (@width/-2)em;
        margin-top: (@height/-2)em;
        text-align: center;
        line-height (200/10)em;
        font-size: 1.5em;
        color: loadingColor;
        padding-top (30/10)em;
        font-weight: lighter;
    }
    .spinner {
        position: absolute;
        top: 50%;
        left: 50%;
        width: (35/10)em;
        height: (35/10)em;
        margin-left: (@width/-2)em;
        margin-top: (@height/-2)em;
    }

    //loading样式二
    .ball-clip-rotate-multiple {
        position: relative;
    }
    .ball-clip-rotate-multiple > div {
        -webkit-animation-fill-mode: both;
        animation-fill-mode: both;
        position: absolute;
        left: 0;
        top: 0;
        border: (1/10)em solid loadingColor;
        border-bottom-color: transparent;
        border-top-color: transparent;
        border-radius: 100%;
        height: ((35/2)/10)em*2;
        width: ((35/2)/10)em*2;
        -webkit-animation: loading_rotate 1s 0s ease-in-out infinite;
        animation: loading_rotate 1s 0s ease-in-out infinite;
    }
    .ball-clip-rotate-multiple > div:last-child {
        display: inline-block;
        top: ((10/2)/10)em*2;
        left: ((10/2)/10)em*2;
        width: ((15/2)/10)em*2;
        height: ((15/2)/10)em*2;
        -webkit-animation-duration: 0.5s;
        animation-duration: 0.5s;
        border-color: loadingColor transparent loadingColor transparent;
        -webkit-animation-direction: reverse;
        animation-direction: reverse;
    }
}

